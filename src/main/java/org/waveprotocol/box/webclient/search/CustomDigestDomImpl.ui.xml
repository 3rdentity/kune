<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g='urn:import:com.google.gwt.user.client.ui'>
  <g:HTMLPanel ui:field="mainPanel" addStyleNames='k-digest-main'>

    <div ui:field="main" addStyleNames='k-digest-inner'>

      <div ui:field="mainLeft" addStyleNames='k-digest-mainLeft'>

        <div ui:field="avatarsAndUnreadDiv" addStyleNames='k-digest-avatarsAndUnreadDiv'>

          <g:FlowPanel ui:field="avatarsDiv" addStyleNames='k-digest-avatarsDiv'>

            <g:SimplePanel ui:field="avatarsSummary">
            </g:SimplePanel> <!-- first avatar -->

            <g:SimplePanel ui:field="groupAvatarContainer" addStyleNames='k-digest-group-avatar'>
            </g:SimplePanel>

          </g:FlowPanel> <!-- avatars -->

          <g:FlowPanel ui:field="unreadDiv" addStyleNames='k-digest-unreadDiv'>
            <g:InlineLabel ui:field='msgs'/>
          </g:FlowPanel> <!-- msgs -->

        </div>

      </div><!-- mainLeft -->

      <div ui:field="mainRight" addStyleNames='k-digest-mainRight'>

        <div ui:field="titleDiv" addStyleNames='k-digest-titleDiv'>
          <g:InlineLabel ui:field="title" addStyleNames='k-digest-title'></g:InlineLabel>
        </div> <!-- titleDiv -->

        <div ui:field="snippetDiv" addStyleNames='k-digest-snippetDiv'>
          <g:InlineLabel ui:field="snippet" addStyleNames='k-digest-snippet'></g:InlineLabel>
        </div> <!-- snippetDiv -->

        <div ui:field="timeDiv" addStyleNames='k-digest-timeDiv'>
          <g:InlineLabel ui:field="time" addStyleNames='k-digest-time'></g:InlineLabel>
          <g:InlineLabel ui:field="position"></g:InlineLabel>
        </div> <!-- timeDiv -->

      </div> <!-- mainRight -->

    </div><!-- Main div -->

  </g:HTMLPanel>
</ui:UiBinder>
