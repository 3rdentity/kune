  xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:style>
  
  </ui:style>
  <b:Modal ui:field="modal" title="" closable="true"
    fade="true" dataBackdrop="STATIC" dataKeyboard="true" b:id="myModal">
    <b:ModalBody>
      <g:FlowPanel>
        <g:FlowPanel ui:field="flow">
          <g:FlowPanel ui:field="vp"/>
           <g:FlowPanel ui:field="bottomPanel"/> <!-- width 100% originally -->
        </g:FlowPanel>
      </g:FlowPanel>
    </b:ModalBody>
    <b:ModalFooter>
      <b:Button ui:field="firstBtn"></b:Button>
      <b:Button ui:field="secondBtn" dataDismiss="MODAL"></b:Button>
    </b:ModalFooter>
  </b:Modal>

</ui:UiBinder>