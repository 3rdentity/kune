<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:style>
  .textbox {
    border: none;
    outline: none;
    padding: 0;
    color: #808080;
    margin: -2px 0;
   
  }
  </ui:style>
  <g:HTMLPanel>
    <g:InlineLabel ui:field="label"/>
    <g:TextBox styleName="{style.textbox} .gwtTextBox" width="100%"
      ui:field="textbox" visible="false"/>
  </g:HTMLPanel>
</ui:UiBinder>