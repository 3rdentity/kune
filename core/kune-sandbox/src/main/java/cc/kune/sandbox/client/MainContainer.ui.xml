<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:style>
  body {
    margin-top: 40px !important;
  }
  .navbars {
  	height: 23px;
  	min-height: 23px !important;
  }
  </ui:style>

  <g:ScrollPanel>
    <b:Container>
      <b:Navbar ui:field="sitebar" position="FIXED_TOP" addStyleNames="{style.navbars}">
        <b:Container>

          <b:NavbarHeader>
            <!-- <b:NavbarBrand>Kune</b:NavbarBrand> -->
            <b:NavbarCollapseButton dataTarget="#navbar-collapse" />
          </b:NavbarHeader>

        </b:Container>
      </b:Navbar>
      <b:Container fluid="true" ui:field="mainContainer">
        <b:Row ui:field="mainRow">
          <b:Column ui:field="mainColumn" size="XS_12">
            <g:DeckPanel ui:field="deck" width="100%"
              height="100%">
              <g:ScrollPanel ui:field="scroll" width="100%">
                <g:FlowPanel ui:field="flow" width="100%">
                </g:FlowPanel>
              </g:ScrollPanel>
            </g:DeckPanel>
          </b:Column>
        </b:Row>
      </b:Container>
      <b:Navbar ui:field="footerbar" position="FIXED_BOTTOM" addStyleNames="{style.navbars}">
        <b:Container>
          <b:NavbarHeader>
            <b:NavbarCollapseButton dataTarget="#navbar-collapse" />
          </b:NavbarHeader>
        </b:Container>
      </b:Navbar>
    </b:Container>
  </g:ScrollPanel>
</ui:UiBinder> 